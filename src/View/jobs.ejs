
<% if (userType === 'recruiter') { %>
    <div class="addJobBtn"><button class="btn btn-primary " onclick="location.href='/addJobView'">Add new job</button></div>
<% } %>
<div class="container mt-4 d-flex">
    
    <div class="row d-flex justify-content-center align-items-center job-container">
        <% jobs.forEach(job => { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <% if (userType === 'recruiter') { %>
                        <div class="titleIcon"><h4 class="card-title"><%= job.company %></h4>
                            <div>
                                <!-- <a href="/update"><span class="material-symbols-outlined">
                                edit_square
                                </span></a> -->
                                <a href="/delete/<%=job.id%>">
                                    <span class="material-symbols-outlined">
                                        delete
                                    </span>
                                </a>
                               
                            </div>
                        </div>
                        <% } %>  
                        <% if (userType === 'seeker') { %>  
                            <h4 class="card-title"><%= job.company %></h4>
                         <% } %>        
                        <h5 class="card-subtitle mb-2 text-muted"><%= job.title %></h5>
                        <p class="card-text">
                            <span class="material-symbols-outlined">
                                location_on
                                </span> <%= job.location %> <br>
                                <span class="material-symbols-outlined">
                                    currency_rupee
                                    </span> <%= job.salary %> <br>
                            <strong>Skills:</strong> <%= job.skills.join(", ") %>
                        </p>
                        <a href="/jobs/<%= job.id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
